<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#878787"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 1" />

    <TextView
        app:layout_constraintEnd_toStartOf="@id/text_view1"
        app:layout_constraintBottom_toTopOf="@id/text_view1"
        android:background="#FF0000"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 2" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/text_view1"
        app:layout_constraintBottom_toTopOf="@id/text_view1"
        android:background="#0071FB"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 3" />

    <TextView
        app:layout_constraintEnd_toStartOf="@id/text_view1"
        app:layout_constraintTop_toBottomOf="@id/text_view1"
        android:background="#7000DF"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 4" />

    <TextView
        app:layout_constraintStart_toEndOf="@id/text_view1"
        app:layout_constraintTop_toBottomOf="@id/text_view1"
        android:background="#8E3A85"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View 5" />
</androidx.constraintlayout.widget.ConstraintLayout>
